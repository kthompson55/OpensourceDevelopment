<?xml version="1.0" encoding="utf-8"?>
<Views.SearchItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp">

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/searchItemImage"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/searchItemName"
            android:text="text"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:id="@+id/searchItemPrice"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="EDIT"
            android:id="@+id/editItemButton"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="DELETE"
            android:id="@+id/deleteItemButton"/>

    </LinearLayout>

</Views.SearchItemView>