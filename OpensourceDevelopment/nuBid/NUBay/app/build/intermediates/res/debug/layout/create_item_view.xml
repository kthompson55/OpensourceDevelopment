<?xml version="1.0" encoding="utf-8"?>
<Views.CreateItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ITEM CREATION"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/titleBar"
        android:layout_weight="0.16" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Item Name"
        android:id="@+id/createItemName"
        android:layout_gravity="center_horizontal"
        android:editable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Item Description"
        android:id="@+id/createItemDescription"
        android:layout_gravity="center_horizontal"
        android:editable="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Start Price"
        android:id="@+id/createItemPrice"
        android:layout_gravity="center_horizontal"
        android:editable="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:text="Start Date"
            android:id="@+id/createItemStartDate"
            android:layout_weight="0.16"
            android:layout_gravity="left|center_vertical"
            android:editable="true"/>

        <EditText
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:text="End Date"
            android:id="@+id/createItemEndDate"
            android:layout_gravity="right|center_vertical"
            android:editable="true"/>
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Create"
            android:id="@+id/createItemBtn"/>
    </FrameLayout>



